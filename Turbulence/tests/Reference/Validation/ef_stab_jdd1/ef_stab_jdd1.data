# Validation :  le profil de vitesse doit correspondre a Poiseuille #
#		test_Pressure_Gradient_pb_periox doit converger vers 0.3 #
dimension 2
Pb_Hydraulique pb
Domaine dom

Read_file dom dom.geom
 Reordonner_faces_periodiques dom periox

VEFPreP1b dis

Scheme_euler_explicit sch
Read sch 
{
        tinit 0.
	nb_pas_dt_max 3
        tmax 30.
        dt_min 1.e-7
        dt_max 1.e-1
	dt_start dt_calc
        dt_impr 100
        dt_sauv 200.
        seuil_statio 1.e-8  
        facsec 1.
}



Fluide_Incompressible fluide
Read fluide
{
	mu Champ_Uniforme 1 0.01
	rho Champ_Uniforme 1 1
}

Associate pb dom
Associate pb sch
Associate pb fluide

Discretize pb dis

Read pb
	{
	Navier_Stokes_standard
		{
                solveur_pression GCP {
                        precond ssor { omega 1.5 }
                        seuil 1.e-8
                }
                convection { EF_stab {  } }
                diffusion  {  }
                Sources  { Canal_perio { bord periox } }
		initial_conditions
			{
                        vitesse Champ_fonc_xyz dom 2  1. 0. 
			}
		boundary_conditions
			{
			periox periodique 
			haut     paroi_fixe
			bas      paroi_fixe
			}	 
                traitement_particulier { canal {  
		debut_stat 29. 
		dt_impr_moy_spat 5.e-1 } }
	}

	Post_processing
        	{
		format lml
		Definition_champs {
			erreur_vitesse Transformation {
				methode formule expression 1 vit-1.5*y*(2-y)
				localisation elem
				source refChamp {
					Pb_Champ pb vitesse nom_source vit 
				}
			}
		} 	       
		fields dt_post 100.
			{
			vitesse elem
			pression elem
                        erreur_vitesse elem
			}
		}
	}

Solve pb
End
                convection { EF_stab { volumes_etendus } }

                traitement_particulier { canal {  
		debut_stat 29. 
		dt_impr_moy_spat 5.e-1 } }

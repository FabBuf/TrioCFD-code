sed "s/vdf dis/ VEFPreP1B dis/
     s/\/\* tetra_here \*\//Trianguler_H dom/
     s/\/\* Transformer_here \*\//Transformer dom x*cos(pi\/4)+y*sin(pi\/4) -x*sin(pi\/4)+y*cos(pi\/4)/" keps2Dvdf.data > keps2Dvef.data

sed "s/vdf dis/ VEFPreP1B dis/
     s/\/\* tetra_here \*\// tetraedriser_homogene_compact dom/ 
     s/\/\* Transformer_here \*\//Transformer dom x*cos(pi\/4)+y*sin(pi\/4) -x*sin(pi\/4)+y*cos(pi\/4) z/
     s/\/\* TransformerZ_here \*\//Transformer dom x*cos(pi\/4)+z*sin(pi\/4) y -x*sin(pi\/4)+z*cos(pi\/4)/" keps3Dvdf.data > keps3Dvef.data


sed "s/vdf dis/ VEFPreP1B dis/
     s/\/\* tetra_here \*\//Trianguler_H dom/
     s/\/\* Transformer_here \*\//Transformer dom x*cos(pi\/4)+y*sin(pi\/4) -x*sin(pi\/4)+y*cos(pi\/4)/" keps2Dvdf_initial.data > keps2Dvef_initial.data

sed "s/vdf dis/ VEFPreP1B dis/
     s/\/\* tetra_here \*\// tetraedriser_homogene_compact dom/ 
     s/\/\* Transformer_here \*\//Transformer dom x*cos(pi\/4)+y*sin(pi\/4) -x*sin(pi\/4)+y*cos(pi\/4) z/
     s/\/\* TransformerZ_here \*\//Transformer dom x*cos(pi\/4)+z*sin(pi\/4) y -x*sin(pi\/4)+z*cos(pi\/4)/" keps3Dvdf_initial.data > keps3Dvef_initial.data
